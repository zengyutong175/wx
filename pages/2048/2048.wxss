/* pages/2048/2048.wxss */
#bg{
  position:absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;
  background-color: #fdf8ee;
}
#title{
  padding-top:60rpx;
  height:250rpx;
  position:relative;
}
.title-left{
  display: inline-block;
  width:50%;
  height:130rpx;
  line-height: 130rpx;
  font-size: 100rpx;
  font-weight: bold;
  color:#776e6f;
  padding-left:10rpx;
}
.score-best-container{
  position:absolute;
  top:40rpx;
  right:10rpx;
}
.score{
  display: inline-block;
  min-width:100rpx;
  background-color: #bbada0;
  border-radius: 10rpx;
  text-align:center;
  padding:5rpx 20rpx;
  margin-right:10rpx;
}
.best{
 display: inline-block;
  min-width:100rpx;
  background-color: #bbada0;
  border-radius: 10rpx;
  text-align:center;
  padding:5rpx 20rpx;
}
.new-game{
  padding:20rpx 30rpx;
  background-color: #8f7a66;
  position:absolute;
  bottom:0rpx;
  right:10rpx;
  color:white;
  font-weight: bold;
  line-height:30rpx;
  vertical-align: baseline;
  display: inline-block;
  border-radius: 10rpx;
}
#content{
  margin-top:50rpx;
  width:750rpx;
  height:750rpx;
  background-color: #bbada0;
  border-radius: 10rpx;
  padding:10rpx; 
  display: flex;
  flex-wrap:wrap;
  justify-content:space-between;
  align-content:space-between;
}

.grid{
  display: inline-block;
  width:175rpx;
  height:175rpx;
  background-color: white;
  color:#776e65;
  font-size: 70rpx;
  font-weight: bold;
  line-height: 175rpx;
  text-align: center;
}
#mask-layer{
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index: 10;
  background-color: rgba(0,0,0,0.3);
}
.gameover{
  color:white;
  position:absolute;
  top:40%;
  left:50%;
  transform: translate(-50%,-50%);
  font-size: 80rpx;
}
.gameover-score{
  color:white;
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  font-size: 80rpx;
}
